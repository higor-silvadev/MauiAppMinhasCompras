<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    x:Class="MauiAppMinhasCompras.Views.RelatorioPage"
    Title="Relatório de Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Filtrar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="10" Padding="10">

        <Label Text="Data Início:" />
        <DatePicker x:Name="dateInicio" Date="{x:Static sys:DateTime.Now}" />

        <Label Text="Data Fim:" />
        <DatePicker x:Name="dateFim" Date="{x:Static sys:DateTime.Now}" />

        <Label x:Name="lblTotal" Text="Total do período: R$ 0,00" FontAttributes="Bold" />

        <Frame Padding="0" Margin="0,10,0,0" VerticalOptions="FillAndExpand">
            <ListView x:Name="lstProdutos">
                <ListView.Header>
                    <Grid ColumnDefinitions="30, 100, 80, 50, 90, 100">
                        <Label Grid.Column="0" Text="ID" Padding="5" />
                        <Label Grid.Column="1" Text="Descrição"/>
                        <Label Grid.Column="2" Text="Preço"/>
                        <Label Grid.Column="3" Text="Qnt"/>
                        <Label Grid.Column="4" Text="Total"/>
                        <Label Grid.Column="5" Text="Data"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="30, 100, 80, 50, 90, 100">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5"/>
                                <Label Grid.Column="1" Text="{Binding Descricao}"/>
                                <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:C}'}"/>
                                <Label Grid.Column="3" Text="{Binding Quantidade}"/>
                                <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:C}'}"/>
                                <Label Grid.Column="5" Text="{Binding DataCadastro, StringFormat='{0:dd/MM/yyyy}'}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

    </VerticalStackLayout>
</ContentPage>